{
  "manifest_version": 3,
  "name": "Dev.To Focus Mode",
  "description": " Enable focus mode on Dev.to to improve reading experience by 10x",
  "version": "1.0",
  "background": {
    "service_worker": "scripts/focusmode.js"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://dev.to/*/*"],
  "action": {
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B"
      },
      "description": "Toggle Focus Mode"
    }
  }
}
